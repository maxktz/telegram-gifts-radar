generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StarGift {
  giftId       BigInt                 @id
  notification StarGiftNotification[]
}

model StarGiftNotification {
  giftId          BigInt
  gift            StarGift @relation(fields: [giftId], references: [giftId])
  chatId          String
  giftMessageId   Int
  infoMessageId   Int
  infoMessageText String

  @@id([giftId, chatId])
}
